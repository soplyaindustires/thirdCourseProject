{
    "explorer.compactFolders": false,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "search.exclude": {
        "**/node_modules": true
    },
    "black-formatter.args": [
        "--line-length=120"
    ],
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.formatOnSave": true
}